#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_SERVICES='metricbeat.node'
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT,$CONTECO_DC_METRICBEAT_NODE_COMMAND,$CONTECO_DC_METRICBEAT_NODE_VOLUMES,$CONTECO_DC_METRICBEAT_NODE_PORTS,$CONTECO_DC_METRICBEAT_NODE_NETWORKS,$CONTECO_DC_METRICBEAT_NODE_DEPLOY_LABELS,$CONTECO_DC_METRICBEAT_NODE_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT="'ES_METRICBEAT_OUTPUT_CONSOLE=${DOLLAR}{CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_CONSOLE}','ES_METRICBEAT_OUTPUT_ELASTICSEARCH=${DOLLAR}{CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_ELASTICSEARCH}','ES_METRICBEAT_OUTPUT_KAFKA=${DOLLAR}{CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_KAFKA}','ES_METRICBEAT_OUTPUT_ELASTICSEARCH_HOSTS=${DOLLAR}{CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_ELASTICSEARCH_HOSTS}','ES_METRICBEAT_OUTPUT_KIBANA_HOST=${DOLLAR}{CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_KIBANA_HOST}','ES_METRICBEAT_OUTPUT_KIBANA_DASHBOARDS=${DOLLAR}{CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_KIBANA_DASHBOARDS}','ES_METRICBEAT_OUTPUT_KAFKA_HOSTS=${DOLLAR}{CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_KAFKA_HOSTS}','ES_METRICBEAT_OUTPUT_KAFKA_TOPIC=${DOLLAR}{CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_KAFKA_TOPIC}'"
export CONTECO_DC_METRICBEAT_NODE_VOLUMES="'/etc:/hostfs/etc:ro','/var/run/docker.sock:/var/run/docker.sock:ro','/proc:/hostfs/proc:ro'"
export CONTECO_DC_METRICBEAT_NODE_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay"
export CONTECO_DC_METRICBEAT_NODE_DEPLOY_MODE="global"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_TYPE}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS metricbeat.base
export CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_CONSOLE="true"
export CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_ELASTICSEARCH="false"
export CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_KAFKA="false"
export CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_ELASTICSEARCH_HOSTS="elasticsearch:9200"
export CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_KIBANA_HOST="kibana:5601"
export CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_KIBANA_DASHBOARDS="false"
export CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_KAFKA_HOSTS="kafka:9092"
export CONTECO_DC_METRICBEAT_NODE_ENVIRONMENT_OUTPUT_KAFKA_TOPIC="test"
export CONTECO_DC_METRICBEAT_NODE_DEPLOY_RESOURCES_LIMITS_CPUS="0.75"
export CONTECO_DC_METRICBEAT_NODE_DEPLOY_RESOURCES_RESERVATIONS_CPUS="0.01"
export CONTECO_DC_METRICBEAT_NODE_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_METRICBEAT_NODE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS metricbeat.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
