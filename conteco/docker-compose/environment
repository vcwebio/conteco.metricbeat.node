#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export CONTECO_DC_GLOBAL_STACKS="metricbeat.node"
export CONTECO_DC_GLOBAL_STACKNAMES="conteco_dc_metrics_node"
export CONTECO_DC_GLOBAL_BOOTSTACKS=""
export CONTECO_DC_GLOBAL_RUNSTACKS="conteco_dc_metrics_node"
export CONTECO_DC_GLOBAL_VOLUME_LIST="${DOLLAR}{CONTECO_STACKPREFIX}_metrics_node_volume"
export CONTECO_DC_GLOBAL='$CONTECO_DC_GLOBAL_SERVICE_NAME,$CONTECO_DC_GLOBAL_IMAGE_NAME,$CONTECO_DC_METRICS_NODE_ENVIRONMENT,$CONTECO_DC_METRICS_NODE_COMMAND,$CONTECO_DC_METRICS_NODE_PORTS,$CONTECO_DC_METRICS_NODE_VOLUMES,$CONTECO_DC_METRICS_NODE_NETWORKS,$CONTECO_DC_METRICS_NODE_DEPLOY_MODE,$CONTECO_DC_GLOBAL_VOLUMES,$CONTECO_DC_GLOBAL_NETWORKS'
# END CONFIGURATION

# START GLOBAL SETTINGS
export CONTECO_DC_GLOBAL_SERVICE_NAME="${CONTECO_TYPE}"
export CONTECO_DC_GLOBAL_IMAGE_NAME="${CONTECO_TYPE}.${CONTECO_NAME}:${CONTECO_TAG}"
export CONTECO_DC_METRICS_NODE_ENVIRONMENT="\
'ES_METRICBEAT_OUTPUT_CONSOLE=${DOLLAR}{CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONSOLE}',\
'ES_METRICBEAT_OUTPUT_ELASTICSEARCH=${DOLLAR}{CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_ELASTICSEARCH}',\
'ES_METRICBEAT_OUTPUT_KAFKA=${DOLLAR}{CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_KAFKA}',\
'ES_METRICBEAT_OUTPUT_CONFIG_ELASTICSEARCH_HOSTS=${DOLLAR}{CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_HOSTS}',\
'ES_METRICBEAT_OUTPUT_CONFIG_KIBANA_HOST=${DOLLAR}{CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_HOST}',\
'ES_METRICBEAT_OUTPUT_CONFIG_KIBANA_DASHBOARDS=${DOLLAR}{CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_DASHBOARDS}',\
'ES_METRICBEAT_OUTPUT_CONFIG_KAFKA_HOSTS=${DOLLAR}{CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_HOSTS}',\
'ES_METRICBEAT_OUTPUT_CONFIG_KAFKA_TOPIC=${DOLLAR}{CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_TOPIC}',\
'ES_METRICBEAT_LOGGING_LEVEL=${DOLLAR}{CONTECO_DC_METRICS_NODE_ENVIRONMENT_LOGGING_LEVEL}'"
export CONTECO_DC_METRICS_NODE_VOLUMES="'/etc:/hostfs/etc:ro','/var/run/docker.sock:/var/run/docker.sock:ro','/proc:/hostfs/proc:ro','${DOLLAR}{CONTECO_STACKPREFIX}_metrics_node_volume:/usr/share/metricbeat/data'"
export CONTECO_DC_METRICS_NODE_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay"
export CONTECO_DC_METRICS_NODE_DEPLOY_MODE="global"
export CONTECO_DC_GLOBAL_VOLUMES="${DOLLAR}{CONTECO_STACKPREFIX}_metrics_node_volume: { external: true }"
export CONTECO_DC_GLOBAL_NETWORKS="${DOLLAR}{CONTECO_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS metricbeat.base
export CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONSOLE="false"
export CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_ELASTICSEARCH="false"
export CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_KAFKA="false"
export CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_HOSTS="elasticsearch:9200"
export CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_HOST="kibana:5601"
export CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_DASHBOARDS="false"
export CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_HOSTS="kafka:9092"
export CONTECO_DC_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_TOPIC="test"
export CONTECO_DC_METRICS_NODE_ENVIRONMENT_LOGGING_LEVEL="warning"
export CONTECO_DC_METRICS_NODE_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export CONTECO_DC_METRICS_NODE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS metricbeat.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
